# HireMind Environment Variables Template
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Database Configuration
DATABASE_URL="postgresql+asyncpg://hiremind:password@localhost:5435/hiremind_db"

# JWT Secret Key (GENERATE A STRONG RANDOM KEY!)
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="REPLACE_WITH_STRONG_RANDOM_KEY"

# Groq API Key for LLM
# Get from: https://console.groq.com/
GROQ_API_KEY="your_groq_api_key_here"

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:5174"

# Qdrant Vector Database
QDRANT_URL="http://localhost:6333"

# Email Configuration (Brevo/Sendinblue API)
# Sign up at: https://app.brevo.com (no domain verification needed)
# Generate API key at: https://app.brevo.com/settings/keys/api
BREVO_API_KEY="xkeysib-YourAPIKeyHere"
EMAIL_FROM="your_email@gmail.com"  # Your Brevo verified sender email

# Twilio SMS Configuration (FREE TRIAL - $15 credit)
# Sign up at: https://www.twilio.com/try-twilio
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# Google reCAPTCHA (FREE - 1M requests/month)
# Sign up at: https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY="your_recaptcha_secret_key"
RECAPTCHA_SITE_KEY="your_recaptcha_site_key"
